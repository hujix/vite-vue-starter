{
  "name": "vite-vue-starter",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "HuJix",
    "url": "https://github.com/hujix"
  },
  "description": "A foundational project for front-end development",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "prettier": "prettier --write ./**/*.{js,ts,vue,json,css,scss,html}",
    "eslint": "eslint src --ext .js,.vue,.ts,.jsx,.tsx --ignore-path .gitignore --fix"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-router": "4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.22.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.35",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "prettier-plugin-css-order": "^2.0.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "sass": "^1.71.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-eslint": "^1.8.1",
    "vue-tsc": "^1.8.27"
  },
  "lint-staged": {
    "src/**/*.{ts,js,jsx,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "pnpm": {
    "patchedDependencies": {
      "vite-plugin-eslint@1.8.1": "patches/vite-plugin-eslint@1.8.1.patch"
    }
  }
}
